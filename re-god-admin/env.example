# Admin Portal Environment Variables

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api

# JWT Configuration (should match backend)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database Configuration (if needed for direct access)
DATABASE_URL=postgresql://postgres:password@localhost:5432/regod

# Development/Production Environment
NODE_ENV=development

# Admin Portal Specific
ADMIN_PORTAL_NAME="REGOD Admin Portal"
ADMIN_PORTAL_VERSION="1.0.0"

# Security Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100

# Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

